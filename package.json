{
  "name": "fox",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "rm -rf dist && NODE_ENV=production babel src/lib --out-dir dist --copy-files",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --watchAll=false -u",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "format": "prettier \"**/*.js\" --write",
    "lint": "eslint --ext .js --ignore-path .gitignore ./",
    "lint:fix": "npm run format && eslint --fix --ext .js --ignore-path .gitignore ./",
    "commit:pre": "npm run lint:fix && npm run test:ci && git add ."
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@fontsource/source-sans-pro": "^4.5.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/user-event": "^12.1.10",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "tailwindcss": "^2.2.16",
    "twin.macro": "^2.7.0",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/eslint-plugin": "^11.2.0",
    "@emotion/jest": "^11.3.0",
    "@storybook/addon-actions": "^6.3.10",
    "@storybook/addon-essentials": "^6.3.10",
    "@storybook/addon-links": "^6.3.10",
    "@storybook/addons": "^6.3.12",
    "@storybook/node-logger": "^6.3.10",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.10",
    "@storybook/theming": "^6.3.12",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "babel-loader": "^8.1.0",
    "babel-plugin-twin": "^1.0.2",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.4.1"
  },
  "pre-commit": [
    "commit:pre"
  ],
  "babel": {
    "plugins": [
      "babel-plugin-twin",
      "babel-plugin-macros",
      "@babel/plugin-transform-runtime",
      [
        "@emotion",
        {
          "autoLabel": "always"
        }
      ]
    ],
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "edge": "17",
            "firefox": "60",
            "chrome": "67",
            "safari": "11.1"
          },
          "useBuiltIns": "usage",
          "corejs": "3.6.5"
        }
      ],
      "@babel/preset-react"
    ]
  },
  "babelMacros": {
    "twin": {
      "preset": "emotion"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "eslint:recommended"
    ],
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/prop-types": "error",
      "no-mixed-spaces-and-tabs": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "useTabs": true,
    "jsxSingleQuote": true,
    "endOfLine": "lf",
    "semi": true,
    "arrowParens": "always",
    "trailingComma": "es5"
  }
}